<% if @product.present? %>
  <div class="modal fade" tabindex="-1" role="dialog" id="product-modal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <%= form_for @product do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title"><%= @product.new_record? ? t('.new_product') : @product.name %></h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :name, t('activerecord.attributes.product.name') %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :label, t('activerecord.attributes.product.label') %>
              <%= f.text_field :label, class: 'form-control' %>
            </div>
            <% unless @product.new_record? %>
              <div class="form-group">
                <%= f.label :produced_at, t('activerecord.attributes.product.produced_at') %>
                <%= f.date_field :produced_at, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :expiration_at, t('activerecord.attributes.product.expiration_at') %>
                <%= f.date_field :expiration_at, class: 'form-control' %>
              </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-default"><%= t('submit_btn_text') %></button>
          </div>
         <% end %>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>
